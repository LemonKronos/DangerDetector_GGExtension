{
  "manifest_version": 3,
  "name": "DangerDetector",
  "version": "1.0",
  "description": "Blocks suspicious links and warns about unsafe websites.",
  "action": {
    "default_popup": "default_popup.html",
    "default_icon": "icon48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "notifications",
    "webRequest",
    "downloads",
    "webRequestBlocking",
    "activeTab",
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
